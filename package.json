{
  "name": "inspector-elements",
  "version": "0.0.1",
  "type": "module",
  "main": "index.js",
  "description": "Web components for visually inspecting objects",
  "keywords": [
    "web component",
    "custom element",
    "inspector",
    "devtools",
    "object inspector",
    "table inspector",
    "object tree"
  ],
  "homepage": "https://github.com/elematic/inspector-elements",
  "bugs": {
    "url": "https://github.com/elematic/inspector-elements/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elematic/inspector-elements.git"
  },
  "license": "MIT",
  "author": "Justin Fagnani <justin@elematic.dev> (http://github.com/justinfagnani)",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib/**/*",
    "index.js",
    "index.js.map",
    "index.d.ts.map",
    "index.d.ts.map"
  ],
  "scripts": {
    "build": "wireit",
    "build-storybook": "wireit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prerelease": "npm run lint && npm run test",
    "release": "npm publish . --access public",
    "test": "wireit",
    "storybook": "wireit",
    "gen-manifest": "wireit"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.7.0",
    "@lit-labs/cli": "^0.6.5",
    "@lit-labs/gen-manifest": "^0.3.4",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@storybook/web-components": "^8.2.9",
    "@storybook/web-components-vite": "^8.2.9",
    "@types/chai": "^4.3.17",
    "@types/mocha": "^10.0.7",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "@web/test-runner": "^0.18.3",
    "@web/test-runner-puppeteer": "^0.16.0",
    "chai": "^5.1.1",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-storybook": "^0.8.0",
    "is-dom": "^1.1.0",
    "prettier": "^2.1.1",
    "storybook": "^8.2.9",
    "typescript": "^5.5.4",
    "wireit": "^0.14.7"
  },
  "dependencies": {
    "lit": "^3.2.0"
  },
  "wireit": {
    "build": {
      "command": "tsc --pretty",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        ".tsbuildinfo",
        "index.{js|js.map}",
        "lib",
        "demo",
        "test",
        "stories"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "wtr test/**/*_test.js",
      "dependencies": [
        "build"
      ],
      "files": [],
      "output": []
    },
    "storybook": {
      "command": "storybook dev -p 6006",
      "service": true,
      "dependencies": [
        {
          "script": "build",
          "cascade": false
        },
        {
          "script": "gen-manifest",
          "cascade": false
        }
      ],
      "files": [
        ".storybook/**/*"
      ]
    },
    "gen-manifest": {
      "command": "lit labs gen --manifest --out .",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "custom-elements.json"
      ]
    },
    "build-storybook": {
      "command": "storybook build",
      "dependencies": [
        "build",
        "gen-manifest"
      ],
      "files": [
        ".storybook/**/*"
      ],
      "output": []
    }
  }
}
